generator client {
  provider = "prisma-client-js"
  // binaryTargets = ["native", "rhel-openssl-1.0.x"]
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
   id String @id @default(uuid()) @map("_id")
   firstName String
   lastName String
   avatar String
   email String
   password String
   bio String
   isAdmin Boolean @default(false)
   isDeactivated Boolean @default(false)
   isDeactivatedByAdmin Boolean @default(false)
   comments Comment[]
   news News[]
   likes Like[]
   bookmarks Bookmark[]
   joinedAt  DateTime @default(now())
   lastUpdated  DateTime @updatedAt

    @@map(name: "users")
}

model News {
  id String @id @default(uuid()) @map("_id")
  image String
  title String
  content String
  slug String @default("")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  readTime Int
  category String
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId   String
  comments Comment[]
  likes Like[]
  bookmarks Bookmark[]

   @@map(name: "news")
}



model Comment {
   id String @id @default(uuid()) @map("_id")
   message String
   createdAt  DateTime @default(now())
   updatedAt  DateTime @updatedAt
   author User  @relation(fields: [authorId], references: [id],  onDelete: NoAction, onUpdate: NoAction)
   authorId   String
   news News @relation(fields: [newsId], references: [id], onDelete: Cascade, onUpdate: Cascade)
   newsId String
   parent Comment? @relation("ParentChild", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
   children Comment[] @relation("ParentChild")
   parentId String?
   likes Like[]

   @@map(name: "comments")
}


model Like {
  id String @id @default(uuid()) @map("_id")
  type String
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  news News? @relation(fields: [newsId], references: [id], onDelete: Cascade)
  newsId String?
  comment Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId String?

  @@index([userId, newsId])
  @@index([userId, commentId])
   @@map(name: "likes")
}

model Bookmark {
  id String @id @default(uuid()) @map("_id")
  news News @relation(fields: [newsId], references: [id], onDelete: Cascade)
  newsId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  createdAt  DateTime @default(now())

   @@map(name: "bookmarks")
}

model Token {
  id String @id @default(uuid()) @map("_id")
  token String
  userId String
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@map(name: "token")
}

